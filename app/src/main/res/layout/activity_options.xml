<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OptionsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/options_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/options_name"
                android:textSize="28sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_choose_crypto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_cryptocurrency"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/options_toolbar" />

    <Spinner
        android:id="@+id/spinner_choose_crypto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/tv_choose_crypto"
        app:layout_constraintTop_toTopOf="@id/tv_choose_crypto" />

    <TextView
        android:id="@+id/tv_choose_fiat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_fiat_currency"
        android:textSize="20sp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_choose_crypto"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner_choose_fiat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/tv_choose_fiat"
        app:layout_constraintTop_toTopOf="@id/tv_choose_fiat"/>

    <TextView
        android:id="@+id/support_combo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/support_combo_text"
        android:textSize="20sp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_choose_fiat"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/supporting_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/support_combo_title" />

</androidx.constraintlayout.widget.ConstraintLayout>